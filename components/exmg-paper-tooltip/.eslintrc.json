{
  "extends": ["eslint:recommended"],
  "parserOptions": {
     "ecmaVersion": 6
   },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "max-len": ["error", 120],
    "brace-style": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "no-var": "off",
    "no-console": "off",
    "require-jsdoc": "off",
    "valid-jsdoc": "off"
  },
  "globals": {
    "Polymer": true,
    "Exmg": true
  }
}
